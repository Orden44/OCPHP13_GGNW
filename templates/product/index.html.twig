{% extends 'base.html.twig' %}

{% block title %}Nos produits - {{ parent() }}{% endblock %}

{% block body %}
    <div class="product d-f fd-c">
        <h1 class="product_title">Nos produits</h1>

        <div class="d-f jc-sb fw-w">
            {% for product in products %}
                <div class="product_card">
                    <img src="{{ asset(product.photo) }}" alt="{{ product.name }}">
                    <div class="product_content">
                        <p class="product_content_name">{{ product.name }}</p>
                        <p class="product_content_description">{{ product.shortDescription }}</p>
                        <p class="product_content_price">{{ product.price|number_format(2, ',') ~ 'â‚¬'}}</p>
                        <a class="product_content_link" href="/product/{{ product.id }}">Voir le produit</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
